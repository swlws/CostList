/**index.wxss**/

.item {
  margin: 10px;
  padding: 10px;
  border: 1px solid #e8e8e8;
  background-color: #fff;
}
.item > .desc {
  color: #333;
  font-size: 14px;
}

radio-group {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 12px;
}
radio-group label {
  margin: 10px;
  display: flex;
  flex-direction: row;
  justify-content: center;

  align-items: center;
}

radio-group label radio .wx-radio-input {
  height: 24rpx;
  width: 24rpx;
  background: transparent;
}

.item .picker,
.item > input {
  border: 1px solid #e8e8e8;
  margin: 5px 0;
  padding: 5px;
  border-radius: 5px;
  height: 20px;
  color: #666;
}

.item > textarea {
  border: 1px solid #e8e8e8;
  margin: 5px 0;
  padding: 5px;
  border-radius: 5px;
  width: 100%;
}

.container button {
  font-weight: normal;
  font-size: 14px;
  margin: 20px auto;
}
