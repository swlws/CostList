/**index.wxss**/

.item {
  margin: 10px;
  padding: 10px;
  border: 1px solid #e8e8e8;
  background-color: #fff;
}
.item > .desc {
  color: #333;
  font-size: 14px;
}

.item .picker,
.item > input {
  border: 1px solid #e8e8e8;
  margin: 5px 0;
  padding: 5px;
  border-radius: 5px;
  height: 20px;
  color: #666;
}

.item > textarea {
  border: 1px solid #e8e8e8;
  margin: 5px 0;
  padding: 5px;
  border-radius: 5px;
  width: 100%;
}

.container button {
  font-weight: normal;
  font-size: 14px;
  margin: 20px auto;
}
